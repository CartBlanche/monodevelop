<Addin id          = "HexEditor"
       namespace   = "MonoDevelop"
       name        = "MonoDevelop Hex Editor"
       author      = "Mike KrÃ¼ger"
       copyright   = ""
       url         = ""
       description = "Provides a hex editor for MonoDevelop"
       category    = "MonoDevelop Core"
       version     = "2.2">
	
	<Runtime>
		<Import assembly="MonoDevelop.HexEditor.dll"/>
	</Runtime>
	
	<Dependencies>
		<Addin id="Core" version="2.2"/>
		<Addin id="Components" version="2.2"/>
		<Addin id="Ide" version="2.2"/>
		<Addin id="AssemblyBrowser" version="2.2"/>
	</Dependencies>

	<Extension path = "/MonoDevelop/Ide/DisplayBindings">
		<DisplayBinding 
			id = "HexEditor"
			insertafter ="AssemblyBrowser"
			class = "MonoDevelop.HexEditor.HexEditorDisplayBinding" />
	</Extension>	
	
</Addin>
