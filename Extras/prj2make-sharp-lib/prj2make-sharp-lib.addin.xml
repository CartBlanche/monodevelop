<Addin id = "Prj2Make"
       namespace   = "MonoDevelop"
       name	 = "Visual Studio .NET Solution Importer"
       author	 = "Francisco 'Paco' Martinez"
       copyright = "GPL"
       url       = ""
       description = "Generates MonoDevelop solutions from Visual Studio .NET solutions files"
	   category    = "IDE extensions"
       version   = "0.13.0">

	<Runtime>
		<Import assembly="prj2make-sharp-lib.dll"/>
	</Runtime>
	
	<Dependencies>
	    <Addin id="Core" version="0.13.0"/>
	    <Addin id="Core.Gui" version="0.13.0"/>
	    <Addin id="Projects" version="0.13.0"/>
		<Addin id="Ide" version="0.13.0"/>
		<Addin id="CSharpBinding" version="0.13.0"/>
		<Addin id="VBBinding" version="0.13.0"/>
	</Dependencies>
	
	<Extension path = "/SharpDevelop/Workbench/ProjectFileFormats">
		<FileFormat id="MSBuildFileFormat"
		            class="MonoDevelop.Prj2Make.MSBuildFileFormat"/>
		<FileFormat id="VS2003SlnFileFormat"
		            class="MonoDevelop.Prj2Make.VS2003SlnFileFormat"/>
		<FileFormat id="VS2003ProjectFileFormat"
		            class="MonoDevelop.Prj2Make.VS2003ProjectFileFormat"/>
	</Extension>

	<Extension path = "/SharpDevelop/Workbench/Combine/FileFilter">
		<FileFilter id = "SlnCombine"
		            _label = "Visual Studio Solution"
		            extensions = "*.sln"/>
		<FileFilter id = "MSBuildProject"
		            _label = "Visual Studio Project"
		            extensions = "*.csproj,*.vbproj"/>
	</Extension>
</Addin>

